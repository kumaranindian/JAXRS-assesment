
import java.net.URI;

import javax.ws.rs.client.Client;
import javax.ws.rs.client.ClientBuilder;
import javax.ws.rs.client.Entity;
import javax.ws.rs.client.WebTarget;
import javax.ws.rs.core.MediaType;
import javax.ws.rs.core.Response;
import javax.ws.rs.core.UriBuilder;

import org.glassfish.jersey.client.ClientConfig;

public class DemoRestClient {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//System.out.println("I will upgrade to rest client");
		
		ClientConfig config = new ClientConfig();
		
		Client client = ClientBuilder.newClient(config);
		
		WebTarget webTarget = client.target(getCustomURI());
	
		String message = webTarget.path("restapi").path("getallcountries")
									.request()
									.accept(MediaType.APPLICATION_JSON)
									.get(Response.class)
									.toString();
	System.out.println(message);
	}
	private static URI getCustomURI() {
		// TODO Auto-generated method stub
		
		return UriBuilder
				.fromUri("http://localhost:8080/Jaxrs_Assesment/").build();
		
	
	}

}
